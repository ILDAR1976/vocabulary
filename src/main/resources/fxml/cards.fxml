<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="cardsAnchor" cache="true" prefHeight="450.0" prefWidth="597.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iha.education.ui.CardsController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="txtPartOfSpeech" promptText="Part of Speech" />
                  <TextField promptText="Sense group" />
                  <TextField promptText="Subgroup" />
                  <TextField promptText="Word" />
                  <TextField promptText="Translate" />
                  <TextField promptText="Example" />
                  <Button minWidth="60.0" mnemonicParsing="false" prefWidth="60.0" text="Insert">
                     <font>
                        <Font size="10.0" />
                     </font></Button>
                  <Button minWidth="60.0" mnemonicParsing="false" prefWidth="60.0" text="Delete">
                     <font>
                        <Font size="10.0" />
                     </font></Button>
                  <Button minWidth="60.0" mnemonicParsing="false" onAction="#handleSaveData" prefWidth="60.0" text="Apply">
                     <font>
                        <Font size="10.0" />
                     </font></Button>
               </children>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="table" editable="true" focusTraversable="false" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
                <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <top>
            <BorderPane BorderPane.alignment="CENTER">
               <right>
                  <ButtonBar buttonMinWidth="10.0" BorderPane.alignment="CENTER">
                     <buttons>
                      <Button mnemonicParsing="false" onAction="#handleCloseTable" text="X" />
                     </buttons></ButtonBar>
               </right>
               <left>
                  <Label fx:id="notApply" alignment="TOP_CENTER" contentDisplay="CENTER" text=" * (The data is not saved !!!)" textFill="#e80303" visible="false" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </left>
            </BorderPane>
         </top>
      </BorderPane>
   </children>
   <effect>
      <Blend />
   </effect>
</AnchorPane>
